<div class='container'>

    {{#each posts as |post|}}

    <div class='card'>

        <div class="card-title brown darken-4">
            <span>{{title}}</span>
        </div>
        <div class='card-content'>

            <p>{{content}}</p>
        </div>
        <div class='card-footer'>
            {{!-- comments made - routing to the related single post --}}
            <a href='/post/{{id}}'>{{comments.length}} comment(s)</a>
        </div>

    </div>

    {{/each}}

</div>