<div class='container'>
    {{!-- passing the post-info partial template --}}
    {{> post-info post}}

    {{#if loggedIn}}
    <div class='card'>
        {{!-- loggedIn variable was passed to the post route in home-routes --}}

        <form class='comment-form card-content'>
            <span class='blue-grey-text text-darken-4'>Add your comments</span>
            <div>
                <textarea name='comment-body' class='materialize-textarea white'></textarea>
            </div>

            <div class='center'>
                <button type='submit' class='btn med-green'>Submit<i class="material-icons right">send</i></button>
            </div>
        </form>
    </div>
    {{/if}}


    {{!-- rendering the comments partial --}}
    {{> comments post.comments}}

</div>
{{#if loggedIn}}
<script src='/javascript/comment.js'></script>
{{/if}}