<div class="card-title med-blue">
    <span class='title'>{{title}}</span> <span class='user'>
        by {{user.username}} on {{format_date created_at}}</span>
</div>
<div class='card-content'>
    <p>{{content}}</p>
</div>
<div class='card-action'>
    {{!-- comments made - routing to the related single post --}}

    <a href='/post/{{id}}'>{{comments.length}} {{format_plural 'comment' comments.length}}</a>
</div>